{
  "name": "ai-privacy-policy-analyzer",
  "version": "1.0.0",
  "description": "Chrome extension that automatically detects and analyzes privacy policies using AI",
  "main": "background/service-worker.js",
  "scripts": {
    "build:dev": "echo 'Extension ready for development - load unpacked in Chrome'",
    "build:prod": "echo 'Extension ready for production - package for Chrome Web Store'",
    "lint": "eslint extension/**/*.js --fix",
    "format": "prettier --write extension/**/*.js extension/**/*.html extension/**/*.css",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "privacy",
    "ai",
    "cloudflare",
    "policy-analysis"
  ],
  "author": "AI Privacy Policy Analyzer Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "extension/**/*.js",
      "!extension/**/__tests__/**"
    ]
  }
}